<!-- views/users/addUser.ejs -->
<%- include('includes/header', { title: 'Add User' }) %>

<form action="/users/create" method="POST" class="bg-white shadow-md rounded p-6">
  <div class="mb-4">
    <label for="name" class="block text-gray-700">Name:</label>
    <input type="text" name="name" id="name" class="w-full p-2 border border-gray-300 rounded">
  </div>
  <div class="mb-4">
    <label for="cpf" class="block text-gray-700">CPF:</label>
    <input type="text" name="cpf" id="cpf" class="w-full p-2 border border-gray-300 rounded">
  </div>
  <div class="mb-4">
    <label for="email" class="block text-gray-700">Email:</label>
    <input type="email" name="email" id="email" class="w-full p-2 border border-gray-300 rounded">
  </div>
  <div class="mb-4">
    <label for="phone" class="block text-gray-700">Phone:</label>
    <input type="text" name="phone" id="phone" class="w-full p-2 border border-gray-300 rounded">
  </div>
  <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded">Adicionar</button>
  <a href="/users" class="inline-block mt-4 text-blue-600">Voltar</a>
</form>

<%- include('includes/footer') %>
